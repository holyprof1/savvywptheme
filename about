<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<script>
  // Custom Cursor
  const cursor = document.querySelector('.cursor');
  const cursorFollower = document.querySelector('.cursor-follower');
  let isOnInteractive = false;
  
  document.addEventListener('mousemove', (e) => {
    cursor.style.left = (e.clientX - 4) + 'px';
    cursor.style.top = (e.clientY - 4) + 'px';
    
    setTimeout(() => {
      cursorFollower.style.left = (e.clientX - 16) + 'px';
      cursorFollower.style.top = (e.clientY - 16) + 'px';
    }, 60);
  });

  document.addEventListener('mouseover', (e) => {
    const interactive = e.target.closest('a, button, [role="button"], .value-card, .team-member, input, textarea');
    if (interactive) {
      isOnInteractive = true;
      cursor.style.transform = 'scale(1.6)';
      cursor.style.opacity = '1';
      cursorFollower.style.transform = 'scale(2.2)';
      cursorFollower.style.borderColor = 'var(--bright-cyan)';
      cursorFollower.style.boxShadow = '0 0 16px var(--bright-cyan), inset 0 0 12px rgba(0,212,255,.4)';
    }
  });

  document.addEventListener('mouseout', (e) => {
    const interactive = e.target.closest('a, button, [role="button"], .value-card, .team-member, input, textarea');
    if (interactive) {
      isOnInteractive = false;
      cursor.style.transform = 'scale(1)';
      cursor.style.opacity = '0.8';
      cursorFollower.style.transform = 'scale(1)';
      cursorFollower.style.borderColor = 'var(--bright-cyan)';
      cursorFollower.style.boxShadow = 'inset 0 0 8px rgba(0,212,255,.3)';
    }
  });

  // NAV scroll behavior
  const nav = document.getElementById('nav');
  window.addEventListener('scroll',()=>{
    window.scrollY>100?nav.classList.add('scrolled'):nav.classList.remove('scrolled')
  });

  // Mobile Menu Toggle
  const mobileMenuBtn = document.getElementById('mobileMenuBtn');
  const mobileMenu = document.getElementById('mobileMenu');
  const mobileMenuOverlay = document.getElementById('mobileMenuOverlay');
  const mobileMenuLinks = document.querySelectorAll('.mobile-menu a');

  function closeMobileMenu(){
    mobileMenu.classList.remove('open');
    mobileMenuOverlay.classList.remove('open');
    document.body.style.overflow = 'auto';
  }

  function openMobileMenu(){
    mobileMenu.classList.add('open');
    mobileMenuOverlay.classList.add('open');
    document.body.style.overflow = 'hidden';
  }

  mobileMenuBtn.addEventListener('click', ()=>{
    mobileMenu.classList.contains('open') ? closeMobileMenu() : openMobileMenu();
  });

  mobileMenuOverlay.addEventListener('click', closeMobileMenu);

  mobileMenuLinks.forEach(link => {
    link.addEventListener('click', closeMobileMenu);
  });

  // Search Modal Toggle
  const navSearch = document.querySelector('.nav-search');
  const searchOverlay = document.getElementById('searchOverlay');
  const searchModal = document.getElementById('searchModal');
  const searchClose = document.getElementById('searchClose');
  const searchInput = document.getElementById('searchInput');
  const searchResults = document.getElementById('searchResults');

  const searchIndex = [
    { title: 'About Us', text: 'Savvy Media Africa founding story and mission', url: '#' },
    { title: 'Our Mission', text: 'Transform African brands into cultural movements', url: '#' },
    { title: 'Our Team', text: 'Award-winning creatives and strategists', url: '#' },
    { title: 'Values', text: 'Bold creativity results and authenticity', url: '#' },
    { title: 'Contact', text: 'Get in touch with Savvy Media', url: '#contact' },
  ];

  function performSearch(query){
    if(!query.trim()){
      searchResults.innerHTML = '';
      return;
    }

    const q = query.toLowerCase();
    const results = searchIndex.filter(item => 
      item.title.toLowerCase().includes(q) || 
      item.text.toLowerCase().includes(q)
    );

    if(results.length === 0){
      searchResults.innerHTML = '<p style="color:rgba(255,255,255,.6);margin-top:2rem">No results found</p>';
      return;
    }

    searchResults.innerHTML = results.map(item => `
      <a href="${item.url}" class="search-result-item" onclick="document.getElementById('searchOverlay').click()">
        <h3 style="color:var(--bright-cyan);margin-bottom:.5rem">${item.title}</h3>
        <p style="color:rgba(255,255,255,.7);font-size:.95rem">${item.text}</p>
      </a>
    `).join('');
  }

  function openSearch(){
    searchOverlay.classList.add('open');
    searchModal.classList.add('open');
    document.body.style.overflow = 'hidden';
    setTimeout(() => searchInput.focus(), 300);
  }

  function closeSearch(){
    searchOverlay.classList.remove('open');
    searchModal.classList.remove('open');
    document.body.style.overflow = 'auto';
    searchInput.value = '';
    searchResults.innerHTML = '';
  }

  navSearch.addEventListener('click', openSearch);
  searchClose.addEventListener('click', closeSearch);
  searchOverlay.addEventListener('click', closeSearch);

  searchInput.addEventListener('input', (e) => {
    performSearch(e.target.value);
  });

  document.addEventListener('keydown', (e) => {
    if(e.key === 'Escape' && searchModal.classList.contains('open')){
      closeSearch();
    }
  });

  // Smooth scroll
  document.querySelectorAll('a[href^="#"]').forEach(a=>{
    a.addEventListener('click',e=>{
      const t=document.querySelector(a.getAttribute('href'));
      if(t){e.preventDefault();t.scrollIntoView({behavior:'smooth',block:'start'})}
    });
  });

  // Animations
  gsap.registerPlugin(ScrollTrigger);

  gsap.to('.hero-title .word, .hero-title .comma',{
    y:0,
    scale:1,
    rotation:0,
    opacity:1,
    duration:1,
    stagger:0.06,
    ease:'power4.out',
    delay:.05
  });

  gsap.to('.hero-pill',{
    opacity:1,
    scale:1,
    duration:.7,
    stagger:.1,
    delay:.6,
    ease:'back.out(1.7)'
  });

  gsap.to('.hero-subtitle',{opacity:1,duration:.8,delay:.8});

  gsap.utils.toArray('[data-parallax]').forEach(el=>{
    const amt = +el.getAttribute('data-parallax') || 10;
    gsap.to(el,{
      y:amt,
      scrollTrigger:{
        trigger:'.hero',
        start:'top top',
        end:'bottom top',
        scrub:1
      }
    });
  });

  gsap.to('.story-image',{
    scrollTrigger:{trigger:'.about-story',start:'top 75%'},
    opacity:1,
    scale:1,
    duration:.8,
    ease:'back.out(1.7)'
  });

  gsap.to('.story-content h2',{
    scrollTrigger:{trigger:'.about-story',start:'top 75%'},
    opacity:1,
    y:0,
    duration:.8,
    ease:'power3.out'
  });

  gsap.to('.highlight-card',{
    scrollTrigger:{trigger:'.story-highlights',start:'top 85%'},
    opacity:1,
    y:0,
    duration:.6,
    stagger:.1,
    ease:'back.out(1.5)'
  });

  document.querySelectorAll('.title-animate').forEach(title=>{
    gsap.to(title.querySelectorAll('.tword'),{
      scrollTrigger:{trigger:title,start:'top 82%'},
      y:0,
      opacity:1,
      duration:.55,
      stagger:.07,
      ease:'power3.out'
    });
  });

  gsap.utils.toArray('.mission-card').forEach((card,i)=>{
    gsap.to(card,{
      scrollTrigger:{trigger:card,start:'top 85%'},
      y:0,
      opacity:1,
      duration:.65,
      delay:i*0.2
    });
  });

  gsap.utils.toArray('.value-card').forEach((card,i)=>{
    gsap.to(card,{
      scrollTrigger:{trigger:card,start:'top 90%'},
      y:0,
      opacity:1,
      duration:.6,
      delay:i*0.04
    });

    card.addEventListener('mousemove',e=>{
      const r=card.getBoundingClientRect();
      card.style.setProperty('--x', (e.clientX-r.left)+'px');
      card.style.setProperty('--y', (e.clientY-r.top)+'px');
    });
  });

  gsap.utils.toArray('.team-member').forEach((member,i)=>{
    gsap.to(member,{
      scrollTrigger:{trigger:member,start:'top 90%'},
      y:0,
      opacity:1,
      duration:.65,
      delay:i*0.08
    });
  });

  // Scroll-to-top
  const scrollBtn=document.getElementById('scrollTopBtn');
  const scrollPct=document.getElementById('scrollPct');
  let scrollTimeout;

  function setScrollProgress(){
    const st=window.scrollY;
    const h=document.documentElement.scrollHeight - innerHeight;
    const p=h>0?Math.round((st/h)*100):0;
    document.documentElement.style.setProperty('--scroll',p);
    scrollBtn.style.setProperty('--scroll',p);
    scrollPct.textContent=p+'%';
    
    if(st>380){
      scrollBtn.classList.add('visible');
      scrollBtn.classList.add('scrolling');
      clearTimeout(scrollTimeout);
      scrollTimeout = setTimeout(()=>{
        scrollBtn.classList.remove('scrolling');
      }, 500);
    } else {
      scrollBtn.classList.remove('visible','scrolling');
      clearTimeout(scrollTimeout);
    }
  }

  setScrollProgress();
  window.addEventListener('scroll',setScrollProgress,{passive:true});
  scrollBtn.addEventListener('click',()=>scrollTo({top:0,behavior:'smooth'}));
</script>

</body>
</html>
