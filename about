<script>
// Custom Cursor
const cursor = document.querySelector('.cursor');
const cursorFollower = document.querySelector('.cursor-follower');

document.addEventListener('mousemove', (e) => {
  cursor.style.left = (e.clientX - 4) + 'px';
  cursor.style.top = (e.clientY - 4) + 'px';
  
  setTimeout(() => {
    cursorFollower.style.left = (e.clientX - 16) + 'px';
    cursorFollower.style.top = (e.clientY - 16) + 'px';
  }, 60);
});

document.addEventListener('mouseover', (e) => {
  const interactive = e.target.closest('a, button, .service-card, .value-card, .leader-card, .stat-card');
  if (interactive) {
    cursor.style.transform = 'scale(1.6)';
    cursor.style.opacity = '1';
    cursorFollower.style.transform = 'scale(2.2)';
    cursorFollower.style.borderColor = 'var(--bright-cyan)';
    cursorFollower.style.boxShadow = '0 0 16px var(--bright-cyan), inset 0 0 12px rgba(0,212,255,.4)';
  }
});

document.addEventListener('mouseout', (e) => {
  const interactive = e.target.closest('a, button, .service-card, .value-card, .leader-card, .stat-card');
  if (interactive) {
    cursor.style.transform = 'scale(1)';
    cursor.style.opacity = '0.8';
    cursorFollower.style.transform = 'scale(1)';
    cursorFollower.style.borderColor = 'var(--bright-cyan)';
    cursorFollower.style.boxShadow = 'inset 0 0 8px rgba(0,212,255,.3)';
  }
});

// Nav scroll
const nav = document.getElementById('nav');
window.addEventListener('scroll', () => {
  window.scrollY > 50 ? nav.classList.add('scrolled') : nav.classList.remove('scrolled');
});

// Smooth scroll
document.querySelectorAll('a[href^="#"]').forEach(a => {
  a.addEventListener('click', e => {
    const t = document.querySelector(a.getAttribute('href'));
    if (t) {
      e.preventDefault();
      t.scrollIntoView({ behavior: 'smooth', block: 'start' });
    }
  });
});

// GSAP Animations
gsap.registerPlugin(ScrollTrigger);

// Story section
gsap.from('.story-content h2', {
  scrollTrigger: { trigger: '.story-section', start: 'top 75%' },
  x: -80,
  opacity: 0,
  duration: 1,
  ease: 'power3.out'
});

gsap.from('.story-text', {
  scrollTrigger: { trigger: '.story-section', start: 'top 75%' },
  x: -60,
  opacity: 0,
  duration: 1,
  stagger: 0.2,
  delay: 0.3,
  ease: 'power3.out'
});

gsap.from('.story-image', {
  scrollTrigger: { trigger: '.story-section', start: 'top 75%' },
  x: 80,
  opacity: 0,
  duration: 1.2,
  delay: 0.4,
  ease: 'power3.out'
});

// Services
gsap.from('.service-card', {
  scrollTrigger: { trigger: '.whatwedo-section', start: 'top 75%' },
  y: 80,
  opacity: 0,
  duration: 0.8,
  stagger: 0.15,
  ease: 'power3.out'
});

// Vision
gsap.from('.vision-text', {
  scrollTrigger: { trigger: '.vision-section', start: 'top 75%' },
  y: 40,
  opacity: 0,
  duration: 0.9,
  ease: 'power3.out'
});

gsap.from('.vision-image', {
  scrollTrigger: { trigger: '.vision-section', start: 'top 75%' },
  scale: 0.9,
  opacity: 0,
  duration: 1,
  delay: 0.3,
  ease: 'power3.out'
});

// Values
gsap.from('.value-card', {
  scrollTrigger: { trigger: '.values-section', start: 'top 75%' },
  y: 70,
  opacity: 0,
  duration: 0.8,
  stagger: 0.12,
  ease: 'power3.out'
});

// Leadership
gsap.from('.leader-card', {
  scrollTrigger: { trigger: '.leadership-section', start: 'top 75%' },
  scale: 0.85,
  opacity: 0,
  duration: 1,
  stagger: 0.3,
  ease: 'back.out(1.7)'
});

// Stats
gsap.from('.stat-card', {
  scrollTrigger: { trigger: '.stats-section', start: 'top 75%' },
  scale: 0.5,
  opacity: 0,
  duration: 0.8,
  stagger: 0.1,
  ease: 'back.out(1.7)'
});

// Service card mouse glow
document.querySelectorAll('.service-card').forEach(card => {
  card.addEventListener('mousemove', e => {
    const r = card.getBoundingClientRect();
    card.style.setProperty('--x', (e.clientX - r.left) + 'px');
    card.style.setProperty('--y', (e.clientY - r.top) + 'px');
  });
});
</script>

</body>
</html>